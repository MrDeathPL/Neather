<Window x:Class="Neather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wc="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Neather" Height="760" Width="480" MinHeight="640" MinWidth="420"
        Background="{StaticResource PrimaryBackground}" WindowStyle="None" ResizeMode="CanResizeWithGrip" BorderThickness="0">
    <Window.Resources>
        <wc:WindowChrome x:Key="WinChrome" CaptionHeight="0" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="6" UseAeroCaptionButtons="False" />
        <Storyboard x:Key="ShowCard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,20,0,0" To="0,0,0,0" Duration="0:0:0.25"/>
        </Storyboard>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <wc:WindowChrome CaptionHeight="0" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="6" UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#1B1C22" Height="52" Padding="14,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Neather" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,10,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,12,0">
                    <Button Style="{StaticResource FlatButton}" Content="_" Width="34" Padding="0" Click="Minimize_Click"/>
                    <Button Style="{StaticResource FlatButton}" Content="X" Width="34" Padding="0" Margin="6,0,0,0" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <DockPanel Grid.Row="1" LastChildFill="True" Margin="18,10,18,18">
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,20">
                <Border CornerRadius="8" Background="#1F2026" Padding="12" Height="50" VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="CityBox" BorderThickness="0" Background="Transparent" Foreground="White"
                                 FontSize="14" VerticalContentAlignment="Center"
                                 TextChanged="CityBox_TextChanged"
                                 Padding="0" Margin="0,0,16,0"/>
                        <Button x:Name="SearchBtn" Grid.Column="1" Style="{StaticResource FlatButton}"
                                Content="SEARCH" Padding="28,10" MinWidth="140" FontSize="15" Click="SearchBtn_Click"/>
                    </Grid>
                </Border>
            </DockPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="CardsHost" />
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>